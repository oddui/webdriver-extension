{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/chromereload.js",
      "src/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "debugger",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_title": "Run specs"
  }
}
